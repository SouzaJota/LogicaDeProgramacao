programa {
  funcao inicio() {// algoritmo "calculo_area_circunferencia"
  //variaveis
   real r, a
   const real pi = 3.14159265
   // Solicita o valor do raio
   escreva("Digite o valor do raio da circunferência: ")
   leia(r)
   
   // Calcula a área da circunferência
   a = pi * (r*r)
   
   // Exibe o resultado
   escreva("A área da circunferência é: ", a)

  
  }
}
